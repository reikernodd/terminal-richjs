{
  "name": "terminal-richjs",
  "version": "0.2.1",
  "description": "Rich terminal rendering for Node.js - inspired by Python's Rich",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./logging": {
      "types": "./dist/logging.d.ts",
      "require": "./dist/logging.cjs",
      "import": "./dist/logging.js"
    }
  },
  "bin": {
    "richjs": "./dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "biome check --write .",
    "format": "prettier --write 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "example": "tsx examples"
  },
  "keywords": [
    "terminal",
    "console",
    "cli",
    "rich",
    "formatting",
    "colors",
    "table",
    "progress",
    "syntax-highlighting"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/cli-spinners": "^2.0.0",
    "@types/node": "^25.0.10",
    "@types/tinycolor2": "^1.4.6",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "ansi-escapes": "^7.2.0",
    "chalk": "^5.6.2",
    "cli-boxes": "^4.0.1",
    "cli-spinners": "^3.4.0",
    "commander": "^14.0.2",
    "highlight.js": "^11.11.1",
    "log-symbols": "^7.0.1",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "node-emoji": "^2.2.0",
    "string-width": "^8.1.0",
    "strip-ansi": "^7.1.2",
    "terminal-size": "^4.0.0",
    "tinycolor2": "^1.6.0",
    "wrap-ansi": "^9.0.2"
  }
}
